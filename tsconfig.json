{
    "compilerOptions": {
        "baseUrl": "src",
        "declaration": true,
        "declarationDir": "dist/types",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "lib": ["DOM", "ES2019"],
        "module": "ES2020",
        "moduleResolution": "node",
        "outDir": "dist",
        "resolveJsonModule": true,
        "strict": true,
        "target": "ES2015"
    },
    "include": ["src", "tests"]
}
